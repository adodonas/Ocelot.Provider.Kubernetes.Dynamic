<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageId>Ocelot.Provider.Kubernetes.Dynamic</PackageId>
		<Version>1.0.0</Version>
		<Authors>Andrey Dodon</Authors>
		<Company>Audiocodes</Company>
		<Description>Dynamic Kubernetes support for Ocelot with token-aware client rotation.</Description>
		<PackageTags>ocelot;kubernetes;service-discovery;aks;kubeclient</PackageTags>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="KubeClient" Version="3.0.2" />
		<PackageReference Include="Ocelot.Provider.Kubernetes" Version="23.4.2" />
	</ItemGroup>

	<ItemGroup>
		<None Include="README.md" Pack="true" PackagePath="" />
	</ItemGroup>

</Project>
